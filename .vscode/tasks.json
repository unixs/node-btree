{
// Документацию по формату tasks.json см.
  // по адресу https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build extension",
      "command": "npx",
      "args": [
        "cmake-js", "-D"
      ],
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": ["relative", "${workspaceRoot}"]
      },
      "group": "build"
    },
    {
      "type": "npm",
      "label": "Jest tests",
      "script": "test",
      "group": "test"
    }
  ]
}
